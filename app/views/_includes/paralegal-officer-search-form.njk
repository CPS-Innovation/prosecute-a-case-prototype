<search class="app-search-form">
  <form>
    {{ govukInput({
      id: "paralegalOfficerSearch[keywords]",
      name: "paralegalOfficerSearch[keywords]",
      label: {
        text: "Search by first or last name",
        classes: "govuk-label--s app-search-form__label"
      },
      value: data.paralegalOfficerSearch.keywords
    }) }}

    {{ govukButton({
      text: "Search",
      classes: "app-search-form__button"
    }) }}
  </form>

  {% if data.paralegalOfficerSearch.keywords %}
    <p class="govuk-!-margin-top-2 govuk-!-margin-bottom-0"><a class="govuk-link--no-visited-state" href="/paralegal-officers/clear-search">Clear search</a></p>
  {% endif %}
</search>
