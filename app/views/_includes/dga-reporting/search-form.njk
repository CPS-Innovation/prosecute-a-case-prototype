<search class="app-search-form">
  <form>
    {{ govukInput({
      id: "dgaReportingSearch[keywords]",
      name: "dgaReportingSearch[keywords]",
      label: {
        text: "Search by URN",
        classes: "govuk-label--s app-search-form__label"
      },
      value: data.dgaReportingSearch.keywords
    }) }}

    {{ govukButton({
      text: "Search",
      classes: "app-search-form__button"
    }) }}
  </form>

  {% if data.dgaReportingSearch.keywords %}
    <p class="govuk-!-margin-top-2 govuk-!-margin-bottom-0"><a class="govuk-link--no-visited-state" href="/dga-reporting/{{ monthKey }}/{{ policeUnitId }}/clear-search">Clear search</a></p>
  {% endif %}
</search>
